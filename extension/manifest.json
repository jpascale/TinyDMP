{
  "manifest_version": 2,
  "name": "Herolens DMP",
  "description": "Peque√±o DMP para la HeroHack",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end" // pay attention to this line
    }
  ],
  "browser_action": {
    "default_icon": "hero-logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}